<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="ResWDemoAppProject.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classLib="using:ResWDemoAppProject.WinUIClassLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ResWDemoAppProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock
            Margin="0,0,0,12"
            Style="{StaticResource SubheaderTextBlockStyle}"
            Text="Resource From App Project" />
        <local:DemoControl />

        <TextBlock
            Margin="0,12,0,12"
            Style="{StaticResource SubheaderTextBlockStyle}"
            Text="Resource From WinUI Class Library with Xaml" />
        <classLib:DemoControlFromWinUIClassLibrary />

        <TextBlock
            Margin="0,12,0,12"
            Style="{StaticResource SubheaderTextBlockStyle}"
            Text="Resource From WinUI Class Library with C#" />
        <classLib:DemoControlFromWinUIClassLibraryWithCSharp />
    </StackPanel>
</Window>
